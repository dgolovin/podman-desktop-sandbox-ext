{
  "name": "redhat-sandbox",
  "displayName": "Red Hat OpenShift Sandbox",
  "description": "Sign up and provisioning for OpenShift Sandbox",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "redhat",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": "^0.0.1"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "OpenShift Developer Sandbox",
      "properties": {
        "redhat.sandbox.registration.api.url": {
          "type": "string",
          "default": "https://registration-service-toolchain-host-operator.apps.sandbox.x8i5.p1.openshiftapps.com",
          "description": "OpenShift Developer Sandbox Registration API URL"
        },
        "redhat.sandbox.api.timeout": {
          "type": "number",
          "default": "100",
          "description": "OpenShift Developer Sandbox Registration API URL timeout in seconds"
        },
        "redhat.sandbox.context.name": {
          "type": "string",
          "default": "",
          "scope": "KubernetesProviderConnectionFactory",
          "description": "OpenShift Developer Sandbox Context name"
        },
        "redhat.sandbox.login.command": {
          "type": "string",
          "default": "",
          "scope": "KubernetesProviderConnectionFactory",
          "description": "OpenShift Developer Sandbox login command from Developer Console"
        }
      }
    }
  },
  "scripts": {
    "build": "vite build && node ./scripts/build.js",
    "watch": "rollup --bundleConfigAsCjs --config rollup.config.js -w"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.18.1",
    "@podman-desktop/api": "^0.15.0",
    "fs-extra": "^10.1.0",
    "got": "^12.6.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "7zip-min": "^1.4.3",
    "byline": "^5.0.0",
    "copyfiles": "^2.4.1",
    "mkdirp": "^2.1.3",
    "typescript": "^5.0.4",
    "vite": "^4.3.3",
    "zip-local": "^0.3.5"
  }
}
